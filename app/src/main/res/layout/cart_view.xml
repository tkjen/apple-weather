<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#2D2D2D"
    app:strokeColor="#4A9EFF"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2D2D2D">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_temperature"
                app:tint="#8E8E93" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEMPERATURE"
                android:textColor="#8E8E93"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginStart="8dp"
                android:letterSpacing="0.05" />

        </LinearLayout>

        <!-- Map Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/temperature_map_background"
            android:clipToOutline="true">

            <!-- Temperature Map Overlay -->
            <ImageView
                android:id="@+id/temperature_overlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/temperature_gradient_overlay"
                android:scaleType="centerCrop"
                android:alpha="0.7" />

            <!-- Map Lines/Borders -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map_boundaries"
                android:scaleType="centerCrop"
                android:alpha="0.3"
                app:tint="#8B4513" />


            <!-- Location Marker -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Temperature Circle -->
                <androidx.cardview.widget.CardView
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:cardCornerRadius="22dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/location_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="21"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center" />
                </androidx.cardview.widget.CardView>

                <!-- Location Label -->
                <TextView
                    android:id="@+id/location_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Location"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

            </LinearLayout>


        </FrameLayout>

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="See More"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="#8E8E93" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>