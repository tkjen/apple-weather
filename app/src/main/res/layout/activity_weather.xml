<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".ui.WeatherActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:titleTextColor="@color/white"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <!-- Fixed header section - stays at top -->
    <FrameLayout
        android:id="@+id/line0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Hiệu ứng mưa Lottie đè phía trên -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/rainAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/rain"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="visible"
            android:alpha="0.4" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/thunderAnimation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/thunder"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:visibility="visible"
            android:alpha="0.4" />
        <!-- Nội dung chính -->
        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textSize="102sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunny"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvHighLowTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="H:29° L:15°"
                android:textSize="21sp"
                android:textColor="@color/white" />
        </LinearLayout>

    </FrameLayout>


    <!-- Scrollable content section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/line0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Hourly forecast panel -->
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_rounded_dark_panel">

                <TextView
                    android:id="@+id/tv_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Cloudy conditions from 1AM-9AM, with showers expected at 9AM."
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#3A3A3C" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hour"
                    tools:orientation="horizontal" />
            </LinearLayout>

            <!-- Daily forecast panel -->
            <LinearLayout
                android:id="@+id/daily_forecast_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_dark_panel">

                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_table"
                        app:tint="@color/white_alpha_70" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-DAY FORECAST"
                        android:textColor="@color/white_alpha_70"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_daily_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_day_forecast"
                    tools:itemCount="10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!-- Add some bottom padding for better scrolling experience -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"

                />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2D2D2D"
                app:strokeColor="#4A9EFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#2D2D2D">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_temperature"
                            app:tint="#8E8E93" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEMPERATURE"
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginStart="8dp"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                    <!-- Map Container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/temperature_map_background"
                        android:clipToOutline="true">

                        <!-- Temperature Map Overlay -->
                        <com.google.android.gms.maps.MapView
                            android:id="@+id/mapView"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/temperature_map_background"
                            android:clipToOutline="true" />


                        <!-- Map Lines/Borders -->

                        <!-- Location Marker -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:gravity="center_horizontal">

                            <!-- Temperature Circle -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#FFFFFF"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/location_temperature"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="21"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />
                            </androidx.cardview.widget.CardView>

                            <!-- Location Label -->
                            <TextView
                                android:id="@+id/location_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Location"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="6dp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />

                        </LinearLayout>

                    </FrameLayout>

                    <!-- Footer Section -->
                    <LinearLayout
                        android:id="@+id/seemore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="See More"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#8E8E93" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <!-- Top Row: UV Index and Sunrise -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- UV Index Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- UV Index Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_uv_index"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="UV INDEX"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>

                            <!-- UV Value -->
                            <TextView
                                android:id="@+id/uv_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FFFFFF"
                                android:textSize="36sp"
                                android:textStyle="normal"
                                android:layout_marginBottom="4dp" />

                            <!-- UV Level -->
                            <TextView
                                android:id="@+id/uv_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:layout_marginBottom="8dp" />

                            <!-- UV Progress Bar -->
                            <ProgressBar
                                android:id="@+id/uv_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:progress="5"
                                android:max="100"
                                android:progressDrawable="@drawable/uv_progress_drawable"
                                android:layout_marginBottom="8dp" />

                            <!-- UV Description -->
                            <TextView
                                android:id="@+id/uv_description"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Low for the rest\nof the day."
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Sunrise Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Sunrise Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_sunrise"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SUNRISE"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>

                            <!-- Sunrise Time -->
                            <TextView
                                android:id="@+id/sunrise_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6:28AM"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="normal"
                                android:layout_marginBottom="12dp" />


                            <!-- Sun Arc Visual -->
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/sun_arc_background"
                                    android:scaleType="fitXY" />

                                <View
                                    android:id="@+id/sun_position"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp"
                                    android:background="@drawable/sun_position_circle"
                                    android:layout_gravity="start|bottom"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginBottom="2dp" />


                            </FrameLayout>

                            <!-- Sunset Time -->
                            <TextView
                                android:id="@+id/sunset_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6:10PM"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Bottom Row: Feelslike and Humidty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Wind Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Wind Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_wind"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="WIND"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>

                            <!-- Wind Compass -->
                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp">

                                <!-- Compass Background -->
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/wind_compass_background"
                                    android:scaleType="fitCenter" />

                                <!-- Wind Direction Indicator -->
                                <ImageView
                                    android:id="@+id/wind_direction_arrow"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/wind_direction_arrow"
                                    android:rotation="0" />

                                <!-- Compass Labels -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="N"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center_horizontal|top"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="S"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:layout_gravity="center_horizontal|bottom"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="W"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:layout_gravity="start|center_vertical"
                                    android:layout_marginStart="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="E"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:layout_gravity="end|center_vertical"
                                    android:layout_marginEnd="4dp" />

                                <!-- Wind Speed -->
                                <TextView
                                    android:id="@+id/wind_speed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:textColor="#FFFFFF"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:layout_gravity="center_horizontal|bottom" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="m/s"
                                    android:textColor="#8E8E93"
                                    android:textSize="10sp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp" />

                            </FrameLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Rainfall Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Rainfall Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_rainfall"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="RAINFALL"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>

                            <!-- Current Rainfall -->
                            <TextView
                                android:id="@+id/current_rainfall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 mm"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="normal"
                                android:layout_marginBottom="4dp" />

                            <!-- Rainfall Period -->
                            <TextView
                                android:id="@+id/rainfall_period"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="in last 24h"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp" />

                            <!-- Expected Rainfall -->
                            <TextView
                                android:id="@+id/expected_rainfall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4 mm expected in next 24h."
                                android:textColor="#FFFFFF"
                                android:textSize="11sp"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <!-- Wind Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Wind Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_feelslike"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="FEELS LIKE"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>
                            <TextView
                                android:id="@+id/feels_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="73%"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="normal"
                                android:layout_marginBottom="4dp" />
                            <TextView
                                android:id="@+id/contentfeels_like"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Similar to the actual temperature"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp" />



                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Rainfall Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="160dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2D2D2D">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Rainfall Header -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="12dp">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_humidty"
                                    app:tint="#8E8E93" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="HUMIDITY"
                                    android:textColor="#8E8E93"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textAllCaps="true"
                                    android:layout_marginStart="6dp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/humidity_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="71%"
                                android:textColor="#FFFFFF"
                                android:textSize="32sp"
                                android:textStyle="normal"
                                android:layout_marginBottom="4dp" />


                            <TextView
                                android:id="@+id/contenthumidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="The dew point is 16° right now."
                                android:textColor="#FFFFFF"
                                android:textSize="15sp"
                                android:lineSpacingExtra="2dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarWeather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:title="@null"
        android:background="@drawable/toolbar_custom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Left Icon -->
            <ImageView
                android:id="@+id/ic_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_map"
                android:padding="16dp" />

            <!-- Centered Title -->
            <ImageView
                android:id="@+id/location_toolbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_location"

                android:textStyle="bold" />

            <!-- Right Icon -->
            <ImageView
                android:id="@+id/ic_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_menu"
                android:padding="16dp" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>



</androidx.constraintlayout.widget.ConstraintLayout>