<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".ui.WeatherActivity">

    <!-- Fixed header section - stays at top -->
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_temperature_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="21"
            android:text="21"
            android:textSize="102sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvHighLowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H:29° L:15°"
            android:textSize="21sp"
            android:textColor="@color/white" />

    </LinearLayout>

    <!-- Scrollable content section -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Hourly forecast panel -->
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_rounded_dark_panel">

                <TextView
                    android:id="@+id/tv_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:text="Cloudy conditions from 1AM-9AM, with showers expected at 9AM."
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#3A3A3C" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_hourly"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_hour"
                    tools:orientation="horizontal" />
            </LinearLayout>

            <!-- Daily forecast panel -->
            <LinearLayout
                android:id="@+id/daily_forecast_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_rounded_dark_panel">

                <LinearLayout
                    android:id="@+id/line3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="19dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_table"
                        app:tint="@color/white_alpha_70" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10-DAY FORECAST"
                        android:textColor="@color/white_alpha_70"
                        android:textSize="13sp"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_daily_forecast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_day_forecast"
                    tools:itemCount="10"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </LinearLayout>

            <!-- Add some bottom padding for better scrolling experience -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"

                />
            <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#2D2D2D"
                app:strokeColor="#4A9EFF"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#2D2D2D">

                    <!-- Header Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp"
                        android:paddingBottom="12dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_temperature"
                            app:tint="#8E8E93" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEMPERATURE"
                            android:textColor="#8E8E93"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginStart="8dp"
                            android:letterSpacing="0.05" />

                    </LinearLayout>

                    <!-- Map Container -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/temperature_map_background"
                        android:clipToOutline="true">

                        <!-- Temperature Map Overlay -->
                        <ImageView
                            android:id="@+id/temperature_overlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/temperature_gradient_overlay"
                            android:scaleType="centerCrop"
                            android:alpha="0.7" />

                        <!-- Map Lines/Borders -->
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/map_boundaries"
                            android:scaleType="centerCrop"
                            android:alpha="0.3"
                            app:tint="#8B4513" />

                        <!-- Location Marker -->
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <!-- Temperature Circle -->
                            <androidx.cardview.widget.CardView
                                android:layout_width="44dp"
                                android:layout_height="44dp"
                                app:cardCornerRadius="22dp"
                                app:cardElevation="4dp"
                                app:cardBackgroundColor="#FFFFFF"
                                android:layout_gravity="center">

                                <TextView
                                    android:id="@+id/location_temperature"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="21"
                                    android:textColor="#000000"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <!-- Location Label -->
                            <TextView
                                android:id="@+id/location_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="My Location"
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_gravity="center"
                                android:layout_marginTop="60dp"
                                android:shadowColor="#000000"
                                android:shadowDx="1"
                                android:shadowDy="1"
                                android:shadowRadius="2" />

                        </FrameLayout>

                    </FrameLayout>

                    <!-- Footer Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?android:attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="See More"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_arrow_right"
                            app:tint="#8E8E93" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>