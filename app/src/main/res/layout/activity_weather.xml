<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".ui.WeatherActivity">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/white"
            android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_temperature_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="21"
                android:text="21"
                android:textSize="102sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/white" />



        <TextView
            android:id="@+id/tv_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunny"
            android:textColor="@color/white"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/tvHighLowTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H:29° L:15°"
            android:textSize="21dp"
            android:textColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="385dp"
        android:layout_height="212dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_rounded_dark_panel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1">

        <TextView
            android:id="@+id/tv_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Cloudy conditions from 1AM-9AM, with showers expected at 9AM."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#3A3A3C" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_hourly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginLeft="30dp"
            tools:listitem="@layout/item_hour"
            tools:orientation="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/daily_forecast_container"
        android:layout_width="385dp"
        android:layout_height="212dp"
        android:orientation="vertical"
        android:background="@drawable/bg_rounded_dark_panel"

        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">


    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"

    android:paddingTop="16dp"
    android:paddingBottom="8dp">
    <ImageView
        android:layout_width="19dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_table"
        app:tint="@color/white_alpha_70" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10-DAY FORECAST"
        android:textColor="@color/white_alpha_70"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginStart="8dp"/>
</LinearLayout>


<androidx.recyclerview.widget.RecyclerView
android:id="@+id/recycler_daily_forecast"
android:layout_width="match_parent"
android:layout_height="0dp"
    android:layout_weight="1"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp"
    android:clipToPadding="false"
    tools:listitem="@layout/item_day_forecast"
    tools:itemCount="7"
    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>